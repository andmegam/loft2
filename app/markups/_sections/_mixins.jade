mixin product(item, path)
		li.products__item
			div.product
				div.product-foto
					div.product-foto__large
						img.product-foto__large-img(src=path+item.foto1 alt=item.model)
					ul.product-foto-small__list
						li.product-foto-small__item.active
							img.product-foto-small__item-img(src=path+item.foto1 alt=item.model)
						li.product-foto-small__item
							img.product-foto-small__item-img(src=path+item.foto2 alt=item.model)
						li.product-foto-small__item
							img.product-foto-small__item-img(src=path+item.foto3 alt=item.model)
					div.product-art
						span.product-art__type Артикул
						span.product-art__number=item.art
				div.product-descr
					div.product-descr__name=item.model
					div.product-descr__desc=item.desc
					div.product-characteristics
						ul.product-characteristics__list
							li.product-characteristics__item
								span.characteristics__type Тип SIM-карты
								span.characteristics__desc=item.typesim
							li.product-characteristics__item
								span.characteristics__type Количество SIM-карт
								span.characteristics__desc=item.countsim
							li.product-characteristics__item
								span.characteristics__type Цвет
								span.characteristics__desc=item.color
							li.product-characteristics__item
								span.characteristics__type ОС
								span.characteristics__desc=item.os
							li.product-characteristics__item
								span.characteristics__type Свзяь 3G
								span.characteristics__desc=item.g3
							li.product-characteristics__item
								span.characteristics__type 4G(LTE)
								span.characteristics__desc=item.g4
							li.product-characteristics__item
								span.characteristics__type GPS-модуль
								span.characteristics__desc=item.gps
					div.product-rating
						span.product-rating__item(data-rating=item.reiting)
							span.product-rating__stars
						span.product-rating__number=item.reiting
				div.product-money
					div.product-money__price
						span.product-money__price-number=item.price
					div.product-money__addtocart
						button.addtocart__btn(type="submit") В корзину
					div.product-money__outofstock
						span.product-money__outofstock-status В наличии
